@{
    ViewBag.Title = "Sensor Master";
}
<div class="col-md-12">
    <div>

        <div class="row">
            <div class="col-md-12">
                <a class="btn btn-outline-info" style="margin-bottom:10px" onclick="return PopupForm('@Url.Action("Add", "Sensor")')"><i class="fa fa-plus"></i> Add New</a>

                @*<a class="btn btn-outline-secondary" style="margin-bottom:10px" href="~/Sensor/ExportAll" target="_self"><i class="fa fa-database"></i> Export</a>*@
            </div>
        </div>

        @*<button onclick="getDateTime()">Export</button>*@
            @*<input type="text" id="Location" />*@

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-info bg-info">
                        <h5 class="card-title">Sensor Master</h5>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>

                            <button type="button" class="btn btn-tool" data-widget="remove">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="row">
                            <div class="table-responsive">
                                <table id="tblTable" class="table table-striped table-bordered table-hover" style="width:99%">
                                    <thead class="bg-info-gradient">
                                        <tr>
                                            <th>Sensor Name</th>
                                            <th>Sensor Location</th>
                                            <th>Sensor IP</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- ./card-body -->
                    <!-- /.card-footer -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>

        <div class="modal fade" id="modal-default">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header bg-info">
                        <h4 class="modal-title"> Alert</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>&hellip;</p>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>

    </div>
</div>

@section scripts{

    <script>
        var Popup, dataTable;
        var simplebar = new Nanobar();

        $(document).ready(function () {
            //simplebar.go(20);
            dataTable = $("#tblTable").DataTable({
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                //"dom": 'T<"clear">lfrtip',
                //"tableTools":
                //    { "aButtons": ["copy", "csv", "xls", { "sExtends": "pdf", "sPdfOrientation": "landscape", "sPdfMessage": "Your custom message would go here." }, "print"] },
                //"deferLoading": 100,
                "ajax": {
                    "url": "@Url.Action("LoadData", "Sensor")",
                    "type": "POST",
                    "datatype": "json",
                    "stateSave": true,

                },
                "columns": [
                    { "data": "SensorName", "name": "SensorName" },
                    { "data": "SensorLocation", "name": "SensorLocation" },
                    { "data": "SensorIP", "name": "SensorIP" },

                    {
                        "data": "SensorID", "name": "SensorID", "render": function (data) {
                            return "<a class='btn btn-outline-info btn-sm' onclick=PopupForm('../Sensor/Edit/" + data + "')><i class='fa fa-pencil'></i> Edit</a><a class='btn btn-outline-danger btn-sm' style='margin-left:5px' onclick=PopupForm('../Sensor/Delete/" + data + "')><i class='fa fa-trash'></i> Delete</a>";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "150px"
                    }
                ],
                "language": {
                    "emptyTable": "No data found, Please click on <b>Add New</b> Button",
                    "search": "Search Sensor <i class='fa fa-search'></i> : ",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Previous",
                    },
                }
            });

            //Implement Additional
        });

        function PopupForm(url) {
            //simplebar.go(20);
            $('.modal-body').load(url, function myfunction(results) {
                $('#modal-default').modal({ show: true });
            });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    //url: form.action,
                    url: "@Url.Action("Add", "Sensor")",
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog('close');
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                        else {
                            Popup.dialog('close');
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })

                        }
                    }
                });
            }
            return false;
        }

        function SubmitADDForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    //url: '/api/ATID/',
                    url: form.action,
                    //url: "@Url.Action("Add", "Sensor")",
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                            $('#modal-default .close').click();
                        }
                        else {
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "error"
                            })
                        }

                    }
                });
            }
            return false;
        }

        function SubmitUPDATEDForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                            $('#modal-default .close').click();
                        }
                        else {
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "error"
                            })
                        }
                    },
                    error: function (data) {
                        $.notify("failed", {
                            globalPosition: "top center",
                            className: "error"
                        })

                    }
                });
            }
            return false;
        }

        function SubmitDELETEForm(form) {
            $.ajax({
                type: "POST",
                url: form.action,
                data: $(form).serialize(),
                success: function (data) {
                    if (data.success) {
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success"
                        })
                        $('#modal-default .close').click();
                    }
                    else {
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "error"
                        })
                    }
                }

            });
            return false;
        }

        function Delete(id) {
            if (confirm('Are You Sure to Delete this Record ?')) {
                $.ajax({
                    type: "POST",
                    //url: '/api/ATID/' + id,
                    url: '/Sensor/Delete/' + id,
                    headers: {
                        "APIKEY": "asdfsa",
                    },
                    success: function (data) {
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success"
                        })
                    },
                    error: function (data) {
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "error"
                        })

                    }

                });
            }
            return false;
        }

        function GetFormatDate(data) {
            return (new Date(parseInt(data.substr(6)))).toLocaleDateString() + ' ' + (new Date(parseInt(data.substr(6)))).toLocaleTimeString();
        }
    </script>

    <script>
        function getDateTime() {
            $.get("/Sensor/Export", {}, showDateTime);


            //$.ajax({
            //    type: "GET",
