            //    success: function (data) {
            //        $.notify("error", {
            //            globalPosition: "top center",
            //            className: "success"
            //        })
            //    },
            //    error: function (data) {
            //        $.notify("error1", {
            //            globalPosition: "top center",
            //            className: "error"
            //        })

            //    }
            //});

        }

        function showDateTime(response) {
            alert(response);
        }
    </script>
}